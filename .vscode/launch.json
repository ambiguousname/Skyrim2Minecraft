	"version": "0.2.0",
	"configurations": [

		{
			"type": "lldb",
			"request": "launch",
			"name": "Debug executable 'Skyrim2Minecraft'",
			"cargo": {
				"args": [
					"build",
					"--bin=Skyrim2Minecraft",
					"--package=Skyrim2Minecraft"
				],
				"filter": {
					"name": "Skyrim2Minecraft",
					"kind": "bin"
				}
			},
			"args": ["Oblivion.esm"],
			"cwd": "${workspaceFolder}"
		},
		{
			"type": "lldb",
			"request": "launch",
			"name": "Debug unit tests in executable 'Skyrim2Minecraft'",
			"cargo": {
				"args": [
					"test",
					"--no-run",
					"--bin=Skyrim2Minecraft",
					"--package=Skyrim2Minecraft"
				],
				"filter": {
					"name": "Skyrim2Minecraft",
					"kind": "bin"
				}
			},
			"args": [],
			"cwd": "${workspaceFolder}"
		}
	]
}